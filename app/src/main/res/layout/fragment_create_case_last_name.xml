<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".home.cases.createCase.CreateCaseLastNameFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="20dp"
        android:paddingRight="7.5dp"
        app:tint="@color/darkest_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <com.example.findme.classes.ui.ErrorEditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            app:hint="שם משפחה של הנעדר"
            app:keyboard="hebrew"
            app:maxChars="15" />

        <com.example.findme.classes.ui.LoadingButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="7.5dp"
            app:buttonText="הבא" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/light_gray" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="משתמש יקר, למיטב ידיעתך כפתור ההבא לא יעבוד עד שכל השדות יהיו מלאים ותקינים לפי קביעת המערכת."
            android:textColor="@color/medium_gray" />
    </LinearLayout>

</FrameLayout>